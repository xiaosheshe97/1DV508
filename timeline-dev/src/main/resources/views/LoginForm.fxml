<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #434FE2;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="250.0" StackPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" maxWidth="-Infinity" prefHeight="40.0" prefWidth="250.0" text="Hi There!" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="28.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="UserNameTextField" prefHeight="26.0" prefWidth="167.0" promptText="Insert Username">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <Region prefHeight="10.0" prefWidth="700.0" />
            <PasswordField fx:id="UserNamePasswordField" promptText="Insert password">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </PasswordField>
            <Region prefHeight="15.0" prefWidth="700.0" />
            <Button fx:id="LogInButton" alignment="BASELINE_RIGHT" graphicTextGap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" style="-fx-background-color: #FFFFFF;" text="Login" textFill="#434fe2">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" left="15.0" right="15.0" top="4.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
